@model EventIndexViewModel

@{ 
    ViewBag.Title = "Events";
}




<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <h1>Events</h1>
            @if (User.Identity.IsAuthenticated)
            {
                <a class="btn btn-primary" asp-action="Create">Create a new event</a>
                <br />
                <br />
                <br />
            }
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div id="index-item-list">
                
                @foreach (var e in Model.EventPreview)
            {
                    <div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@e.Name</h3>
                            </div>
                            <div class="panel-body">
                                @e.Date
                                <br />
                                <a class="btn btn-primary" asp-action="Details" asp-route-id="@e.Id">View event details</a>
                            </div>
                        </div>
                        <br />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
