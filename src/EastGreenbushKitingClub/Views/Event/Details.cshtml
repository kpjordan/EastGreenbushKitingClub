@model Event
@{
    ViewBag.Title = Model.Name;
}



<h1>@Model.Name</h1>
@if (Model.ImageUrl != null)
{
    @Model.ImageUrl
}
<img src="@Model.ImageUrl" />
<br />
<div>
    @Model.Details
    <br />
    @Model.Date
    <br />
    @Model.Location
    <br />
</div>
<br />
@if (User.Identity.IsAuthenticated)
{
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit @Model.Name</a>
    <a class= "btn btn-danger" asp-action="Archive" asp-route-id="@Model.Id">DELETE</a>
    <br />

}



<a asp-action="Index">Back to Events</a>

