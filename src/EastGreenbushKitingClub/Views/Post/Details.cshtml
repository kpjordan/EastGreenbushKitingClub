@model Post

<h1>@Model.Title</h1>
<h3><a asp-action="Details" asp-controller="Member" asp-route-id="@Model.Member.Id">@Model.Member.FirstName @Model.Member.LastName</a> @Model.Date</h3>
<br />
@if (User.Identity.IsAuthenticated)
{
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit Post</a>
    <a class="btn btn-danger" asp-action="Archive" asp-route-id="@Model.Id">DELETE</a>
    <br />
}
<div>
    @Model.Content
</div>


<a asp-action="Index">Back to all posts</a>



