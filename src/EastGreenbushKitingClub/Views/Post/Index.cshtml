@model PostIndexViewModel


<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <h1>Posts</h1>
            @if (User.Identity.IsAuthenticated)
            {
                <a class="btn btn-primary" asp-action="Create">Create a new post</a>
                <br />
                <br />
                <br />
            }
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div id="index-item-list">

                @foreach (var post in Model.PostsPreview)
            {
                    <div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@post.Title</h3>
                            </div>
                            <div class="panel-body">
                                @post.Date
                                <br />
                                @post.MemberName
                                <br />
                                @post.Content
                                <br />
                                <a class="btn btn-primary" asp-action="Details" asp-route-id="@post.Id">View full post</a>
                            </div>
                        </div>
                        <br />
                    </div>
                }
            </div>
        </div>
    </div>
</div>